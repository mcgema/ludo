import org.junit.Test;
import java.util.Random;
import static org.junit.Assert.*;

public class DadoTest {

//sugestao do ai utilizado apenas como exemplo a ser EDITADO

    @Test
    public void testRolar() {
        Random rand = new Random(123); // semente definida para garantir a reprodutibilidade do teste - verificar necessidade
        for (int i = 0; i < 100; i++) {//mudar
            int resultado = Dado.rolar();
            assertTrue(resultado >= 1 && resultado <= 6);//manter
        }
    }

    @Test
    public void testMensagemRolagem() {
        Random rand = new Random(123); // semente definida para garantir a reprodutibilidade do teste
        for (int i = 0; i < 100; i++) {
            int resultado = Dado.rolar();
            String mensagemEsperada = String.format("Dado rolado: %d", resultado);
            assertEquals(mensagemEsperada, System.out.getLines().get(0));
        }
    }
    
    @Test
    public void testReprodutibilidade() {
        Random rand1 = new Random(123);
        Random rand2 = new Random(123);
        for (int i = 0; i < 100; i++) {
            int resultado1 = rand1.nextInt(6) + 1;
            int resultado2 = rand2.nextInt(6) + 1;
            assertEquals(resultado1, resultado2);
        }
    }
}

