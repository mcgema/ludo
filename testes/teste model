import static org.junit.Assert.*;
import org.junit.Test;
import cores.*;

public class ModelTest {

    @Test
    public void testMovePiao() {
        Model model = new Model();
        Piao piao = new Piao(Cor.vermelho, 1);
        model.tabuleiro.setCasa(piao, 2);
        model.movePiao(Cor.vermelho, 1, 3);
        assertEquals(5, model.tabuleiro.getCasa(piao));
    }

    @Test
    public void testPodeMoverPiao() {
        Model model = new Model();
        Piao piao = new Piao(Cor.amarelo, 2);
        model.tabuleiro.setCasa(piao, 18);
        assertTrue(model.podeMoverPiao(Cor.amarelo, 2, 4));
    }

    @Test
    public void testPodeMoverPiaoComBarreira() {
        Model model = new Model();
        Piao piao1 = new Piao(Cor.vermelho, 1);
        Piao piao2 = new Piao(Cor.vermelho, 2);
        model.tabuleiro.setCasa(piao1, 15);
        model.tabuleiro.setCasa(piao2, 16);
        assertFalse(model.podeMoverPiao(Cor.vermelho, 1, 2));
    }

    @Test
    public void testPodeMoverPiaoComNumero6() {
        Model model = new Model();
        Piao piao = new Piao(Cor.verde, 1);
        model.tabuleiro.setCasa(piao, 10);
        assertFalse(model.podeMoverPiao(Cor.verde, 1, 6));
    }

    @Test
    public void testLancaDado() {
        Model model = new Model();
        int dado = model.lancaDado();
        assertTrue(dado >= 1 && dado <= 6);
    }
}
